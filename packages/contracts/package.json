{
  "name": "@repo/contracts",
  "description": "Foundry-based template for developing Solidity smart contracts",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/PaulRBerg"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@repo/eslint-config": "0.0.0",
    "@repo/typescript-config": "0.0.0",
    "@types/chai": "^4.3.11",
    "@types/eslint": "^8.44.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^17.0.12",
    "chai": "^4.3.10",
    "eslint": "^8.53.0",
    "hardhat": "^2.19.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-preprocessor": "^0.1.5",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache_hardhat artifacts",
    "compile": "hardhat compile",
    "sizes": "hardhat size-contracts",
    "build": "pnpm compile && pnpm sizes",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mumbai": "hardhat run scripts/deploy.ts --network mumbai",
    "lint": "pnpm lint:sol && pnpm lint:ts && pnpm prettier:check",
    "lint:sol": "forge fmt && hardhat check",
    "lint:ts": "eslint . --max-warnings 0",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "test": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  },
  "dependencies": {
    "snarkjs": "^0.7.2"
  }
}
